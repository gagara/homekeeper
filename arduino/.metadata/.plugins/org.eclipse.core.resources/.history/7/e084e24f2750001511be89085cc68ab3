#include "RadioReceiver.h"

#include <RF24.h>

const uint64_t pipe = 0xE8E8F0F0E1LL;
const uint8_t len = 1;
uint8_t buff[len];

RF24 radio(9, 10);

void setup() {
    Serial.begin(9600);
    pinMode(13, OUTPUT);

    radio.begin();
    radio.openReadingPipe(1, pipe);

    radio.powerUp();
    radio.startListening();
}

void loop() {
    if (radio.available()) {
        bool eoi = false;
        while (!eoi) {
            eoi = radio.read(buff, sizeof(buff));
        }
        Serial.println(buff[0]);
        digitalWrite(13, buff[0]);
    }
}
