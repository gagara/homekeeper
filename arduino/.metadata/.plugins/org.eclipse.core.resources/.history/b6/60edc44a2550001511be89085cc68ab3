#include "RadioReceiver.h"

#include <RF24.h>

const uint64_t pipe = 0xE8E8F0F0E1LL;
const uint8_t len = 1;
uint8_t buff[len];

RF24 radio(9, 10);

void setup() {
    Serial.begin(9600);
    radio.begin();
    radio.openReadingPipe(1, pipe);
    pinMode(13, OUTPUT);
}

void loop() {
    if (radio.available()) {
        Serial.println(buff[0]);
        radio.read(buff, sizeof(buff));
        digitalWrite(13, buff[0]);
    }
}
