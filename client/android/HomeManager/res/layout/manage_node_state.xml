<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/modeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/manage_node_mode_text" />

        <CheckBox
            android:id="@+id/modeFlag"
            android:layout_width="@dimen/element_value_width"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/stateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/manage_node_state_text" />

        <ToggleButton
            android:id="@+id/nodeStateSwitch"
            android:layout_width="@dimen/element_value_width"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/periodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/manage_node_period_text" />

        <Spinner
            android:id="@+id/periodList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:entries="@array/node_switch_period_entries"
            android:entryValues="@array/node_switch_period_entry_values" />
    </LinearLayout>

</LinearLayout>